@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark fw-bold mb-0">Hoş Geldiniz!</h2>
        <span class="text-muted"><i class="fa-solid fa-calendar-day me-2"></i>@DateTime.Now.ToShortDateString()</span>
    </div>

    <div class="row g-3 row-cols-1 row-cols-md-2 row-cols-xl-5">

        <div class="col">
            <div class="card text-white bg-primary h-100 shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 small opacity-75">Dersler</h6>
                            <h2 class="fw-bold mb-0">@ViewBag.CategoryCount</h2>
                        </div>
                        <i class="fa-solid fa-book fa-2x opacity-50"></i>
                    </div>
                </div>
                @if (User.IsInRole("Müdür"))
                {
                    <a href="/Admin/Categories" class="card-footer text-white bg-transparent border-0 text-end small">Git <i class="fa-solid fa-arrow-right"></i></a>
                }
                else
                {
                    <span class="card-footer text-white bg-transparent border-0 text-end small opacity-50"><i class="fa-solid fa-lock"></i> Yetki Yok</span>
                }
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-success h-100 shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 small opacity-75">Sınavlar</h6>
                            <h2 class="fw-bold mb-0">@ViewBag.ExamCount</h2>
                        </div>
                        <i class="fa-solid fa-pen-to-square fa-2x opacity-50"></i>
                    </div>
                </div>
                <a href="/Admin/Exams" class="card-footer text-white bg-transparent border-0 text-end small">Git <i class="fa-solid fa-arrow-right"></i></a>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-warning h-100 shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 small opacity-75">Sorular</h6>
                            <h2 class="fw-bold mb-0">@ViewBag.QuestionCount</h2>
                        </div>
                        <i class="fa-solid fa-circle-question fa-2x opacity-50"></i>
                    </div>
                </div>
                <a href="/Admin/Exams" class="card-footer text-white bg-transparent border-0 text-end small">Sınavlar Üzerinden Gidiniz <i class="fa-solid fa-arrow-right"></i></a>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-info h-100 shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 small opacity-75">Öğrenciler</h6>
                            <h2 class="fw-bold mb-0">@ViewBag.StudentCount</h2>
                        </div>
                        <i class="fa-solid fa-user-graduate fa-2x opacity-50"></i>
                    </div>
                </div>
                <a href="/Admin/Students" class="card-footer text-white bg-transparent border-0 text-end small">Yönet <i class="fa-solid fa-arrow-right"></i></a>
            </div>
        </div>

        <div class="col">
            <div class="card text-white bg-danger h-100 shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 small opacity-75">Personel</h6>
                            <h2 class="fw-bold mb-0">@ViewBag.StaffCount</h2>
                        </div>
                        <i class="fa-solid fa-users-gear fa-2x opacity-50"></i>
                    </div>
                </div>
                @if (User.IsInRole("Müdür"))
                {
                    <a href="/Admin/Users" class="card-footer text-white bg-transparent border-0 text-end small">Yönet <i class="fa-solid fa-arrow-right"></i></a>
                }
                else
                {
                    <span class="card-footer text-white bg-transparent border-0 text-end small opacity-50"><i class="fa-solid fa-lock"></i> Yetki Yok</span>
                }
            </div>
        </div>

    </div>
</div>