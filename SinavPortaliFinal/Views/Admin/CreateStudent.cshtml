@model SinavPortaliFinal.Models.AppUser
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card p-4 col-md-6 mx-auto">
    <h4 class="text-danger">Yeni Öğrenci Kaydı</h4>
    <hr />

    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post">
        <label>Ad</label>
        <input type="text" name="Name" class="form-control mb-2" required />

        <label>Soyad</label>
        <input type="text" name="Surname" class="form-control mb-2" required />

        <label>Kullanıcı Adı (Okul No)</label>
        <input type="text" name="UserName" class="form-control mb-2" placeholder="Örn: 12345" required />

        <label>Şifre</label>
        <input type="text" name="Password" class="form-control mb-3" required />

        <button class="btn btn-danger w-100">Öğrenciyi Kaydet</button>
    </form>
</div>