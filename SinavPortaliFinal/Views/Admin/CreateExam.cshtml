@model SinavPortaliFinal.Models.Exam

@{
    ViewData["Title"] = "Yeni Sınav";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fa fa-plus-circle"></i> Yeni Sınav Oluştur</h5>
        </div>
        <div class="card-body">

            <form method="post" action="/Admin/CreateExam">

                <div class="mb-3">
                    <label class="form-label fw-bold">Sınav Başlığı</label>
                    <input type="text" name="Title" class="form-control" required placeholder="Örn: Matematik Vize Sınavı" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Süre (Dakika)</label>
                    <input type="number" name="Duration" class="form-control" required placeholder="Örn: 45" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Başlangıç Tarihi/Saati</label>
                    <input type="datetime-local" name="StartDate" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Bitiş Tarihi/Saati</label>
                    <input type="datetime-local" name="EndDate" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Ders</label>
                    <select name="CategoryId" class="form-select">
                        @foreach (var item in ViewBag.Dersler)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success fw-bold">Kaydet</button>
                </div>

            </form>
        </div>
    </div>
</div>