@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card p-4 col-md-6 mx-auto">
    <h4>Yeni Personel Ekle</h4>
    <form method="post">
        <label>Ad</label><input type="text" name="Name" class="form-control mb-2" required>
        <label>Soyad</label><input type="text" name="Surname" class="form-control mb-2" required>
        <label>Kullanıcı Adı</label><input type="text" name="UserName" class="form-control mb-2" required>
        <label>Şifre</label><input type="text" name="Password" class="form-control mb-2" required>
        <label>Rol</label>
        <select name="Role" class="form-select mb-3">
            <option value="Öğretmen">Öğretmen</option>
            <option value="Müdür">Müdür</option>
        </select>
        <button class="btn btn-dark w-100">Oluştur</button>
    </form>
</div>