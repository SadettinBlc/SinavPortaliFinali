@model SinavPortaliFinal.Models.AppUser

@{
    ViewData["Title"] = "Öğrenci Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4" style="max-width: 800px;">
    <div class="card shadow-sm border-0">

        <div class="card-header bg-white border-bottom pt-4 pb-3">
            <h5 class="text-danger fw-bold mb-0">Öğrenci Bilgilerini Güncelle</h5>
        </div>

        <div class="card-body p-4">
            <form method="post" action="/Admin/UpdateStudent">

                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="mb-3">
                    <label class="form-label text-secondary small">Ad</label>
                    <input type="text" name="Name" value="@Model.Name" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label text-secondary small">Soyad</label>
                    <input type="text" name="Surname" value="@Model.Surname" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label text-secondary small">Kullanıcı Adı (Okul No)</label>
                    <input type="text" name="UserName" value="@Model.UserName" class="form-control" required />
                </div>

                <div class="mb-4">
                    <label class="form-label text-secondary small">Yeni Şifre</label>
                    <input type="text" name="Password" class="form-control" placeholder="Değiştirmek istemiyorsanız boş bırakın..." />
                    <small class="text-muted fst-italic">* Şifreyi güncellemek istemiyorsanız bu alanı boş geçiniz.</small>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger text-white py-2 fw-bold">
                        Öğrenciyi Güncelle
                    </button>
                    <a href="/Admin/Students" class="btn btn-light text-secondary py-2">
                        İptal
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>