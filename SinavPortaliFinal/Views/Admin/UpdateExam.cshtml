@model SinavPortaliFinal.Models.Exam

@{
    ViewData["Title"] = "Sınav Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0"><i class="fa fa-pen-to-square"></i> Sınav Düzenle</h5>
        </div>
        <div class="card-body">

            <form method="post" action="/Admin/UpdateExam">

                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                <input type="hidden" name="CreatedDate" value="@Model.CreatedDate" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Ders</label>
                    <input type="text" class="form-control bg-light" value="Ders Değiştirilemez" disabled />
                    <small class="text-muted"><i class="fa fa-info-circle"></i> Güvenlik gereği sınavın dersi değiştirilemez.</small>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Sınav Adı</label>
                    <input type="text" name="Title" value="@Model.Title" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Süre (Dakika)</label>
                    <input type="number" name="Duration" value="@Model.Duration" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Başlangıç Tarihi</label>
                    <input type="datetime-local" name="StartDate"
                           value="@Model.StartDate.ToString("yyyy-MM-ddTHH:mm")"
                           class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Bitiş Tarihi</label>
                    <input type="datetime-local" name="EndDate"
                           value="@Model.EndDate.ToString("yyyy-MM-ddTHH:mm")"
                           class="form-control" required />
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a href="/Admin/Exams" class="btn btn-secondary me-2">İptal</a>
                    <button type="submit" class="btn btn-warning text-white fw-bold px-4">
                        <i class="fa fa-save"></i> Güncelle
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>