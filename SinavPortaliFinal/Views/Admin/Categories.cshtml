@model List<SinavPortaliFinal.Models.Category>
@{
    ViewData["Title"] = "Dersler"; Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between">
        <h5 class="mb-0">Dersler</h5>
        <a href="/Admin/CreateCategory" class="btn btn-light btn-sm text-primary fw-bold">Yeni Ders</a>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead><tr><th>#</th><th>Ders Adı</th><th>Açıklama</th><th>İşlem</th></tr></thead>
            <tbody>
                @{
                    int i = 0;
                }
                @foreach (var x in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@x.Name</td>
                        <td>@x.Description</td>
                        <td>
                            <a href="/Admin/UpdateCategory/@x.Id" class="btn btn-warning btn-sm"><i class="fa fa-pen"></i></a>
                            <button class="btn btn-danger btn-sm btn-sil" data-id="@x.Id" data-url="/Admin/DeleteCategoryAjax"><i class="fa fa-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>