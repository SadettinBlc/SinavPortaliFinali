@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş Yap - Sınav Portalı</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex align-items-center justify-content-center" style="height: 100vh;">

    <div class="card shadow" style="width: 400px;">
        <div class="card-header bg-primary text-white text-center py-3">
            <h4 class="mb-0">Sınav Portalı Giriş</h4>
        </div>
        <div class="card-body p-4">

            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger">@ViewBag.Hata</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold">Kullanıcı Adı</label>
                    <input type="text" name="username" class="form-control" placeholder="Örn: mudur" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Şifre</label>
                    <input type="password" name="password" class="form-control" placeholder="******" required />
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Giriş Yap</button>
            </form>

            <div class="text-center mt-3">
                <small class="text-muted">Demo için:<br>Müdür: <b>mudur</b> / 123<br>Öğrenci: <b>ogrenci</b> / 123</small>
            </div>
        </div>
    </div>

</body>
</html>
